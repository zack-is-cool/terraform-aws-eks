{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>defenseunicorns/narwhal-delivery-renovate-config:terraformReposAuto.json5"
  ],
  "customDatasources": {
    "awsVpcCni": {
      "defaultRegistryUrlTemplate": "https://raw.githubusercontent.com/awsdocs/amazon-eks-user-guide/refs/heads/mainline/latest/ug/networking/managing-vpc-cni.adoc",
      "format": "plain",
      "transformTemplates": [
        "{\"releases\": $map($match($responseBody, /v[0-9]+\\.[0-9]+\\.[0-9]+-eksbuild\\.[0-9]+/), function($m){ {\\\"version\\\": $m.match} })}"
      ]
    }
  },
  "logLevelRemap": [
    {
      "matchMessage": "/*./",
      "newLogLevel": "trace"
    }
  ],
  "forkProcessing": "enabled",
  "schedule": ["at any time"],
  "customManagers": [
    {
      // Which files to parse
      "fileMatch": [
        // Adjust as needed. For example: all .tf or .tfvars
        "(^|/).*\\.tfvars$"
      ],
      // Regex to find your pinned version in the code
      // e.g. `addon_version = "v1.19.0-eksbuild.1"`
      "matchStrings": [
        "addon_version\\s*=\\s*\"(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+-eksbuild\\.[0-9]+)\""
      ],

      // Tells Renovate to use the "awsVpcCni" custom datasource above
      "datasourceTemplate": "custom.awsVpcCni",
      "depNameTemplate": "awsVpcCni",

      // Usually you want semver for AWS versions
      "versioningTemplate": "semver"
    }
  ],
  "hostRules": [
    {
      "hostType": "http",
      "matchHost": "docs.aws.amazon.com"
    }
  ]
}
