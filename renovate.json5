{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>defenseunicorns/narwhal-delivery-renovate-config:terraformReposAuto.json5"
  ],
  "customDatasources": {
    "vpc-cni": {
      "defaultRegistryUrlTemplate": "https://raw.githubusercontent.com/zack-is-cool/terraform-aws-eks/refs/heads/main/dependencies/eks-addons-versions.json",
      "format": "json",
      "transformTemplates": [
        // Single-step JSONata expression wrapped in a JSON string:
        // "{\"releases\": $map($$.(addons[addonName='vpc-cni'].addonVersions[]), function($v){ {\"version\": $v.addonVersion} })}"
        "{\"releases\": $.addons[addonName = \"vpc-cni\"].addonVersions[].{\"version\": addonVersion}}"
      ]
    },
    "coredns": {
      "defaultRegistryUrlTemplate": "https://raw.githubusercontent.com/zack-is-cool/terraform-aws-eks/refs/heads/main/dependencies/eks-addons-versions.json",
      "format": "json",
      "transformTemplates": [
        // Same JSON file, but we filter for coredns
        "{\"releases\": $.addons[addonName = \"coredns\"].addonVersions[].{\"version\": addonVersion}}"
      ]
    }
  },
  "logLevelRemap": [
    {
      "matchMessage": "/.*/",
      "newLogLevel": "trace"
    }
  ],
  "forkProcessing": "enabled",
  "schedule": ["at any time"],
  "customManagers": [
    {
      // This manager looks for a pinned version in the "vpc-cni" block
      "fileMatch": ["(^|/).*\\.tfvars$"],
      // For lines like:
      // vpc-cni = {
      //   addon_version = "v1.19.0-eksbuild.1"
      // }
      "matchStrings": [
        "vpc-cni\\s*=\\s*\\{[^}]*addon_version\\s*=\\s*\"(?<currentValue>v[^\"]+)\""
      ],
      // It uses the custom datasource named "vpc-cni"
      "datasourceTemplate": "custom.vpc-cni",
      "depNameTemplate": "vpc-cni",
      "versioningTemplate": "loose"
    },
    {
      // This manager looks for a pinned version in the "coredns" block
      "fileMatch": ["(^|/).*\\.tfvars$"],
      // For lines like:
      // coredns = {
      //   addon_version = "v1.11.4-eksbuild.1"
      // }
      "matchStrings": [
        "coredns\\s*=\\s*\\{[^}]*addon_version\\s*=\\s*\"(?<currentValue>v[^\"]+)\""
      ],
      // It uses the custom datasource named "coredns"
      "datasourceTemplate": "custom.coredns",
      "depNameTemplate": "coredns",
      "versioningTemplate": "loose"
    }
  ]
}
